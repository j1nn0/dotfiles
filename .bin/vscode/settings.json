{
  "[blade]": {
    "editor.defaultFormatter": "shufo.vscode-blade-formatter"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "[dotenv]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[ignore]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
  },
  "[properties]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "auto-close-tag.activationOnLanguage": [
    "xml",
    //"php",
    "blade",
    "ejs",
    "jinja",
    //"javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    //"plaintext",
    "markdown",
    "vue",
    "liquid",
    "erb",
    "lang-cfml",
    "cfml",
    "HTML (EEx)",
    "HTML (Eex)",
    "plist"
  ],
  "chat.commandCenter.enabled": false,
  "debug.javascript.defaultRuntimeExecutable": {
    "pwa-node": "~/.local/share/mise/shims/node"
  },
  "editor.cursorBlinking": "phase",
  "editor.cursorSmoothCaretAnimation": "explicit",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "'UDEV Gothic 35NFLG', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.guides.bracketPairs": "active",
  "editor.minimap.enabled": false,
  "editor.renderLineHighlight": "all",
  "editor.renderLineHighlightOnlyWhenFocus": true,
  "editor.showFoldingControls": "always",
  "editor.wordSegmenterLocales": ["ja"],
  "editor.wrappingIndent": "indent",
  "emmet.excludeLanguages": ["markdown", "php"],
  "explorer.compactFolders": false,
  "files.associations": {
    // shell-formatだとインデントが無くなるのでプレーンテキストにしておく
    ".gitconfig*": "plaintext"
  },
  "files.autoGuessEncoding": true,
  "files.candidateGuessEncodings": ["utf8", "shiftjis", "eucjp"],
  "git-graph.date.format": "ISO Date & Time",
  "git.allowNoVerifyCommit": true,
  "git.autofetch": true,
  "git.openRepositoryInParentFolders": "never",
  "gitlens.views.repositories.showBranchComparison": false,
  "gitlens.views.repositories.showBranches": false,
  "gitlens.views.repositories.showCommits": false,
  "gitlens.views.repositories.showContributors": false,
  "gitlens.views.repositories.showRemotes": false,
  "gitlens.views.repositories.showStashes": true,
  "gitlens.views.repositories.showTags": false,
  "gitlens.views.repositories.showUpstreamStatus": false,
  "gitlens.views.repositories.showWorktrees": false,
  "hediet.vscode-drawio.resizeImages": null,
  "php.debug.executablePath": "~/.local/share/mise/shims/php",
  "redhat.telemetry.enabled": true,
  "scm.compactFolders": false,
  "security.workspace.trust.untrustedFiles": "open",
  "terminal.external.osxExec": "Ghostty.app",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.fontFamily": "'UDEV Gothic 35NF', Menlo, Monaco, 'Courier New', monospace",
  "terminal.integrated.fontSize": 13,
  "todo-tree.general.tagGroups": {
    "FIXME": ["FIXME", "FIXIT", "FIX"]
  },
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "[ ]",
    "[x]",
    "UNDONE"
  ],
  "workbench.colorTheme": "Gruvbox Dark Soft",
  "workbench.iconTheme": "gruvbox-material-icon-theme",
  "workbench.layoutControl.enabled": false,
  "workbench.productIconTheme": "fluent-icons",
  "workbench.startupEditor": "none"
}
